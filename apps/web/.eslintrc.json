{
  "env": {
    "browser": true
  },
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          "**/app/core/*",
          "**/reports/*",
          "**/app/shared/*",
          "**/organizations/settings/*",
          "**/organizations/policies/*",
          "@bitwarden/web-vault/*",
          "src/**/*"
        ],
        "paths": ["@fluffy-spoon/substitute"]
      }
    ]
  }
}
